// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  ADMIN
  CLIENT
}

enum EventType {
  WEDDING
  BAPTISM
  BIRTHDAY
  ANNIVERSARY
  CORPORATE
}

enum OrderStatus {
  PENDING
  PAID
  ACTIVE
  EXPIRED
}

enum RSVPStatus {
  ATTENDING
  NOT_ATTENDING
  MAYBE
}

model User {
  id            String    @id @default(uuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  password      String
  role          UserRole  @default(CLIENT)
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]
  events        Event[]
}

model Account {
  id                String  @id @default(uuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Template {
  id          String    @id @default(uuid())
  name        String
  description String?
  eventType   EventType
  thumbnail   String
  previewUrl  String?
  
  // Design configuration
  colorScheme Json      // { primary, secondary, accent, background, text }
  layout      Json      // Layout configuration
  sections    Json      // Available sections and their default content
  
  isActive    Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  events      Event[]
}

model Event {
  id              String      @id @default(uuid())
  userId          String
  templateId      String
  
  // Event details
  eventType       EventType
  eventTitle      String
  eventDate       DateTime
  eventLocation   String?
  
  // Customization
  customContent   Json        // All customized content (text, images, colors, etc.)
  publicLink      String      @unique  // Unique public URL slug
  
  // Order info
  orderStatus     OrderStatus @default(PENDING)
  paymentDate     DateTime?
  expiryDate      DateTime?
  
  isActive        Boolean     @default(true)
  views           Int         @default(0)
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  user            User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  template        Template    @relation(fields: [templateId], references: [id])
  rsvps           RSVP[]
}

model RSVP {
  id          String      @id @default(uuid())
  eventId     String
  
  // Guest info
  guestName   String
  guestEmail  String?
  guestPhone  String?
  
  // Response
  status      RSVPStatus
  numberOfGuests Int      @default(1)
  message     String?
  dietaryRestrictions String?
  
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  event       Event       @relation(fields: [eventId], references: [id], onDelete: Cascade)
}

model SiteSettings {
  id                String   @id @default(uuid())
  siteName          String   @default("Weday")
  siteDescription   String?
  logo              String?
  contactEmail      String?
  contactPhone      String?
  socialLinks       Json?    // { facebook, instagram, twitter, etc }
  
  // Pricing
  packagePrice      Int      @default(999)
  currency          String   @default("MDL")
  
  // Features
  featuresEnabled   Json?    // Which features are enabled
  
  updatedAt         DateTime @updatedAt
}
